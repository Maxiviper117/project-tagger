{
  "name": "project-tagger",
  "version": "2024.12.07",
  "description": "A powerful CLI tool for managing tags in projects.",
  "main": "dist/index.js",
  "module": "src/index.ts",
  "type": "module",
  "files": ["dist"],  
  "bin": {
    "project-tagger": "dist/index.js"
  },     
  "publishConfig": {
  "access": "public"
}       ,
  "repository": {
    "type": "git",
    "url": "https://github.com/Maxiviper117/project-tagger.git"
  },
  "author": "Maxiviper117",
  "license": "GPL-3.0-or-later",
  "keywords": [
    "cli",
    "tags",
    "project-management",
    "typescript"
  ],
  "scripts": {
    "build": "tsc",
    "compile": "bun build ./src/index.ts --compile --outfile ./compiled/tagmaster",
    "compile:windows": "bun build ./src/index.ts --compile --target=bun-windows-x64 --outfile ./compiled/tagmaster.exe",
    "compile:linux": "bun build ./src/index.ts --compile --target=bun-linux-x64 --outfile ./compiled/tagmaster",
    "compile:mac": "bun build ./src/index.ts --compile --target=bun-darwin-x64 --outfile ./compiled/tagmaster"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.10.1",
    "eslint": "^8.56.1",
    "prettier": "^3.1.8",
    "ts-node": "^11.1.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "inquirer": "^12.1.0"
  }
}
